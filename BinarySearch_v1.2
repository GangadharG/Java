// Java program to find first or last occurrence of a number
public class BinarySearch3 {

	public static void main(String[] args){
		
		// binary search assumes input array is sorted
		int a[] = {2, 4, 10, 10, 10, 18, 20}; // find the first occurrence of 10
		int position = binarySearch(a, 10);
		if(position>0)
			System.out.print("Position of required element "+position);
		else
			System.out.println("element not found");
	}
	
	static int binarySearch(int[] a, int x){
		int start = 0, end = a.length-1;
		int result = -1;
		while(start<=end){
			int mid = (start+end)/2;
			if(a[mid] == x){
				result = mid;
				end = mid-1;	// to find last occurrence, start = mid+1;
			}
			else if(x < a[mid])
				end = mid-1;
			else
				start = mid+1;
		}
		return result;
	}
}
